<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div class="table-responsive">
  <table class = "table">
    <thead>
      <tr>
        <th>Title</th>
        <th>
          <%= button_to "New Book", new_book_path, class: "btn btn-light" %>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>

          <td><%= book.title %></td>
          <td>
            <div class="btn-group" role="group" aria-label="Possible actions for book">
              <%= button_to "Show", book, method: :get, class: "btn btn-light" %>
              <%= button_to "Edit", edit_book_path(book), method: :get, class: "btn btn-light" %>
              <%= button_to "Destroy", book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
