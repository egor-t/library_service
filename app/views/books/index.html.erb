<p id="notice"><%= notice %></p>

<h1>Books</h1>

<div class="table-responsive">
  <table class = "table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Group</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td>
            <ul>
              <% book.authors.each do |author| %>
              <li> <%= author.name %> </li>
              <% end %>
            </ul>
          </td>
          <td><%= book.group.name %></td>
          <td>
            <div class="btn-group" role="group" aria-label="Possible actions for book">
              <%= button_to "Show", book, method: :get, class: "btn btn-light" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
