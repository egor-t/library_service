<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<div class="table-responsive">
  <table class = "table">
    <thead>
      <tr>
        <th>Name</th>
        <th>
          <%= button_to "New Author", new_author_path, method: :get, class: "btn btn-light" %>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.name %></td>
          <td>
            <div class="btn-group" role="group" aria-label="Possible actions for book">
              <%= button_to "Show", author, method: :get, class: "btn btn-light" %>
              <%= button_to "Edit", edit_author_path(author), method: :get, class: "btn btn-light" %>
              <%= button_to "Destroy", author, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
